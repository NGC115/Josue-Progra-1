#include <iostream>
#include <iostream>
#include <locale.h>
#include <string>

int main()
{
	setlocale(LC_ALL, "es_MX.UTF-8");
	bool pregunta = true;
	int valor = 0;
	int valor2 = 0;
	std::cout << "hola porfavor ingresa un valor\n";
	std::cin >> valor;
	std::cout << "hola ingresa otro valor\n";
	std::cin >> valor2;
	if (valor == valor2)
	{
		std::cout << "son identicos\n";
	}
	else if (valor < valor2)
	{
		std::cout << valor2 << "es mayor que\n" << valor << std::endl;
	}
	else if (valor > valor2)
	{
		std::cout << valor2 << "es menor que\n" << valor << std::endl;
	}

}
